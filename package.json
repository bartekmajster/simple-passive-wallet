{
  "name": "funds-tracker",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "install:all": "pnpm install && cd api && pnpm install && cd ../webapp && pnpm install",
    "install:api": "pnpm install && cd api && pnpm install",
    "install:webapp": "pnpm install && cd webapp && pnpm install",
    "prepare": "husky install .husky",
    "lint:api": "cd api && pnpm lint",
    "lint:webapp": "cd webapp && pnpm lint",
    "lint": "pnpm lint:api && pnpm lint:webapp",
    "tsc:api": "cd api && pnpm tsc",
    "tsc:webapp": "cd webapp && pnpm tsc",
    "tsc": "pnpm tsc:api && pnpm tsc:webapp",
    "test:api": "cd api && pnpm test",
    "test:webapp": "cd webapp && pnpm test",
    "test": "pnpm test:api && pnpm test:webapp",
    "build:api": "cd api && pnpm build",
    "build:webapp": "cd webapp && pnpm build",
    "build": "pnpm build:api && pnpm build:webapp"
  },
  "devDependencies": {
    "husky": "8.0.1"
  }
}
