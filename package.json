{
  "name": "funds-tracker",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "install:all": "pnpm install && cd api && pnpm install && cd ../webapp && pnpm install",
    "install:api": "pnpm install && cd api && pnpm install",
    "install:webapp": "pnpm install && cd webapp && pnpm install",
    "prepare": "husky install .husky",
    "start:api": "nx start:dev funds-tracker-api",
    "start:webapp": "nx start funds-tracker-webapp",
    "start:all": "nx run-many --target=start --all",
    "lint:api": "nx lint funds-tracker-api",
    "lint:webapp": "nx lint funds-tracker-webapp",
    "lint:all": "nx run-many --target=lint --all",
    "test:api": "nx test funds-tracker-api",
    "test:webapp": "nx test funds-tracker-webapp",
    "test:all": "nx run-many --target=test --all",
    "build:api": "nx build funds-tracker-api",
    "build:webapp": "nx build funds-tracker-webapp",
    "build:all": "nx run-many --target=build --all"
  },
  "devDependencies": {
    "husky": "8.0.1",
    "nx": "14.3.5",
    "@nrwl/nx-cloud": "latest"
  },
  "workspaces": [
    "api",
    "webapp"
  ],
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0",
    "nx": ">=14.0.0"
  }
}
