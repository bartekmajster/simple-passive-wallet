{
	"extends": "tsconfig/typescript.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"],
			"@app/*": ["src/app/*"],
			"@config/*": ["src/config/*"],
			"@constants/*": ["src/constants/*"],
			"@decorators/*": ["src/decorators/*"],
			"@guards/*": ["src/guards/*"],
			"@handlebars/*": ["src/handlebars/*"],
			"@inputs/*": ["src/inputs/*"],
			"@services/*": ["src/services/*"],
			"@tests/*": ["src/tests/*"],
			"@validators/*": ["src/validators/*"],
		}
	}
}
