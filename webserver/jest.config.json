{
  "moduleDirectories": ["node_modules", "<rootDir>"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "globalSetup": "./test/setup.ts",
  "globalTeardown": "./test/teardown.ts",
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    ".+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
